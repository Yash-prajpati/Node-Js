<%- include('../header') %>

<div class="content-wrapper">
    <div class="container-fluid">
  
    <div class="row mt-3">
      <div class="col-lg-6">
        <% if(locals.message?.success) { %>
          <div class="alert alert-success" id="success-message">
              <%= locals.message?.success %>
          </div>
          <% } %>
         <div class="card">
         
            <form method="post"  action="/exsubcategory/insertexsubcategory">
              <input type="hidden" name="editid" value="<%= single?.id %>" />
              <div class="card-body">
                <div class="card-title">SubCategory</div>
                <hr>
           <div class="form-group">
            <label for="fname">Category</label>
            <div class="col-sm-9" style="padding: 0;">
                <select name="category" class="form-control" style="width: 557px;">
                    <option>---select category---</option>
                    <% category.map((val)=>{ %>
                        <option <% if(val?.category==single?.categoryId?.category) { %>
                            selected
                            <% } %>
                                value="<%= val?.id %>">
                                    <%= val?.category %>
                        </option>
                        <% }) %>
                </select>
            </div>
           </div>
  
           <div class="form-group">
            <label for="fname">SubCategory</label>
            <div class="col-sm-9">
              <select name="subcategory" id="subcategory" class="form-control">
                  <option>---select subcategory---</option>
              </select>
          </div>
           </div>

           
           <div class="form-group">
            <label for="fname">ExSubCategory</label>
            <input type="text" value="<%= single?.exsubcategory %>" name="exsubcategory"
            class="form-control" name="subcategory" placeholder="ExSubcategory">
            </div>
           </div>
       
           <div class="form-group" style="padding-left: 20px;">
            <button type="submit" class="btn btn-light px-5">Submit</button>
          </div>
          </form>
         </div>
         </div>
      </div>
  
      
    </div><!--End Row-->
  
    <!--start overlay-->
          <div class="overlay toggle-menu"></div>
        <!--end overlay-->
  
    </div>

    <%- include('../footer') %>