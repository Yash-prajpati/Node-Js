<%- include('../header') %>

<div class="clearfix"></div>
	
<div class="content-wrapper">
  <div class="container-fluid">

  <div class="row mt-3">
    <div class="col-lg-6">
      <% if(locals.message?.success) { %>
        <div class="alert alert-success" id="success-message">
            <%= locals.message?.success %>
        </div>
        <% } %>
       <div class="card">
         <div class="card-body">
         <div class="card-title">SubCategory Form</div>
         <hr>
          <form method="post" action="/subcategory/insertsubcategory">
         <div class="form-group">
          <label for="fname">Category</label>
          <div class="col-sm-9" style="padding: 0;">
            <select name="category" class="form-control" style="width: 557px;" >
                <option>---select category---</option>
                <% category.map((val)=>{ %>
                    <option value="<%= val?.id %>">
                        <%= val?.category %>
                    </option>
                    <% }) %>
            </select>
        </div>      </div>

         <div class="form-group">
          <label for="fname">Subcategory</label>
          <input type="text" name="subcategory" class="form-control" id="input-1" placeholder="SubCategory">
         </div>
     
         <div class="form-group">
          <button type="submit" class="btn btn-light px-5"><a href="/subcategory">Submit</a></button>
        </div>
        </form>
       </div>
       </div>
    </div>

    
  </div><!--End Row-->

  <!--start overlay-->
        <div class="overlay toggle-menu"></div>
      <!--end overlay-->

  </div>
  <!-- End container-fluid-->
  
 </div>

    <%- include('../footer') %>