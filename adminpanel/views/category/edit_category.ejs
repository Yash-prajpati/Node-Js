<%- include('../header') %>

<div class="content-wrapper">
    <div class="container-fluid">
  
    <div class="row mt-3">
      <div class="col-lg-6">
        <% if(locals.message?.success) { %>
          <div class="alert alert-success" id="success-message">
              <%= locals.message?.success %>
          </div>
          <% } %>
         <div class="card">
         
            <form method="post" action="/category/updatecategory">
              <input type="hidden" name="editid" value="<%= single?.id %>" />
              <div class="card-body">
                <div class="card-title">Category Form</div>
                <hr>
           <div class="form-group">
            <label for="fname">First Name</label>
            <input type="text" name="category" class="form-control" id="input-1" placeholder="Category"  value="<%= single?.category %>">
           </div>
       
           <div class="form-group">
            <button type="submit" class="btn btn-light px-5">Submit</button>
          </div>
          </form>
         </div>
         </div>
      </div>
  
      
    </div><!--End Row-->
  
    <!--start overlay-->
          <div class="overlay toggle-menu"></div>
        <!--end overlay-->
  
    </div>
    <%- include('../footer') %>