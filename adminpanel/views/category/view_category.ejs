<%- include('../header') %>

<div class="clearfix"></div>

<div class="content-wrapper">
  <div class="container-fluid">

    <div class="row mt-3">
      <div class="col-lg-12">
        <% if(locals?.message?.success) { %>
          <div class="alert alert-success w-50" role="alert">
            <%= locals?.message?.success %>
          </div>
          <% } %>

            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Static Table</h5>
                <div class="table-responsive">
                  <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">Srno</th>
                        <th scope="col">Category</th>
                        <th scope="col">Action</th>
                        <th scope="col">Status</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% category.forEach((val, index)=> { %>
                        <tr>
                          <td>
                            <%= ++index %>
                          </td>
                          <td>
                            <%= val?.category %>
                          </td>
                          <td>
                            <a href="/category/deletecategegory?id=<%= val?.id %>" class="btn btn-danger btn-sm"><i
                                class="fa fa-trash"></i></a>
                            <a href="/category/editcategory?id=<%= val?.id %>" class="btn btn-primary btn-sm"><i
                                class="fa fa-edit"></i></a>
                          </td>
                          <td>
                            <% if(val?.status=="active" ) { %>
                              <a href="/category/changestatus?id=<%= val?.id %>&status=deactive"
                                class="btn btn-success btn-sm">
                                <%= val?.status %>
                              </a>
                              <% } else { %>
                                <a href="/category/changestatus?id=<%= val?.id %>&status=active"
                                  class="btn btn-warning btn-sm">
                                  <%= val?.status %>
                                </a>
                                <% } %>
                          </td>
                        </tr>
                        <% }) %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
      </div>

    </div><!--End Row-->




    <!--start overlay-->
    <div class="overlay toggle-menu"></div>
    <!--end overlay-->

  </div>
  <!-- End container-fluid-->

</div><!--End content-wrapper-->

    <%- include('../footer') %>